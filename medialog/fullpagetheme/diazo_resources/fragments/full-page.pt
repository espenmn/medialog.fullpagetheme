<div id="fullpage">
 
	<ul id="menu">
		<li class="btn">
		<a id="portal-logo"   
			tal:define="url context/portal_url"
			title="Home"
			href="/"
			i18n:domain="plone"
			i18n:attributes="href url">
			<img src="logo.png" alt="" title="home"   />
		</a>
		</li>	
		<li class="btn" data-menuanchor="main-slider">
		  <a id="main-slider"   
			  title="Slider"
			  href="#main-slider">Top
		  </a>
		</li>	
		
		<tal:loop	 
			tal:repeat="item 
				context/@@folderListing">
			<li class="btn" 
				tal:define="dokument  item/getId" 
				tal:condition="not:item/exclude_from_nav" 
				tal:attributes="data-menuanchor dokument">
				<a  href="" 
					tal:define="link python:'#' + dokument"
					tal:attributes="href link"  
					tal:content="item/Title" />
			</li>	 
		</tal:loop>
	</ul>    
        
	<span class="section fa" data-anchor="main-slider"
		 tal:condition="exists: context/slider/@@folderListing">
		<div class="carousel slide" >
 			<div class="carousel-inner">
			  <tal:repeat  tal:repeat="item  context/slider/@@folderListing" > 
				<div tal:define="item_url item/getURL|item/absolute_url;
					image_url python:item_url + '/@@images/image' ;
					style python: 'background-image:url(' + image_url + ')'" 
					class="item active"
					tal:attributes="style style">
					 <h2 tal:content="item/Title" />
					<div class="container">
						<div class="row slide-margin">
							<div class="col-sm-6">
								<div class="carousel-content">
									<h1 class="animation animated-item-1" tal:content="item/Title" />
									<h2 class="animation animated-item-2" tal:content="item/Description" />
								</div>
							</div>

							<div class="col-sm-6 hidden-xs animation animated-item-4">
								<div class="slider-img">
									<img src="" alt="" tal:attributes="src image_url"/>
								</div>
							</div>

						</div>
					</div>
				</div><!--/.item-->
			  </tal:repeat>
			</div><!--/.carousel-inner-->
		</div><!--/.carousel-->
		<a class="prev hidden-xs" href="#main-slider" data-slide="prev">
			<i class="fa fa-chevron-left"></i>
		</a>
		<a class="next hidden-xs" href="#main-slider" data-slide="next">
			<i class="fa fa-chevron-right"></i>
		</a>
	</span><!--/#main-slider-->

	<tal:lopp tal:repeat="item 
			context/@@folderListing">
			
		<span class="section fa" 
				 tal:condition="not:item/exclude_from_nav" 
				 tal:define="realobject item/getObject;
				 url realobject/absolute_url;
				 logo python:'background-image:url(' + str(url) + '/@@images/image)';"
				 tal:attributes="data-anchor item/getId;
				 style logo">
			<div tal:replace="structure realobject/folder_full_view_item" />
		</span>

	</tal:lopp>
 
</div>

 